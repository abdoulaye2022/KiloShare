{
    "name": "kiloshare/backend",
    "description": "KiloShare Backend API - Application de partage d'espace bagages",
    "type": "project",
    "require": {
        "php": "^8.1",
        "firebase/php-jwt": "^6.8",
        "getbrevo/brevo-php": "1.x.x",
        "league/flysystem": "^3.0",
        "league/flysystem-ftp": "^3.0",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.2",
        "slim/psr7": "^1.6",
        "slim/slim": "4.*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "KiloShare\\": "src/",
            "KiloShare\\Modules\\": "src/modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KiloShare\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
