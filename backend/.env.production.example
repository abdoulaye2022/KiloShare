# Production Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Europe/Paris
APP_URL=https://kiloshare.com

# Database Configuration
DB_HOST=localhost
DB_NAME=kiloshare_prod
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_in_production
JWT_EXPIRES_IN=86400

# FTP Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf
BASE_UPLOADS_URL=https://kiloshare.com/backend/uploads/

# API Configuration
API_BASE_URL=https://kiloshare.com/api
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Email Configuration (for notifications)
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password

# Production configurations...
# (other settings remain the same as development)